{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Select nRF Connect SDK",
			"group": {
				"kind": "none",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder:firmware}"
			},
			"type": "process",
			"command": "west",
			"args": [
				"config",
				"manifest.file",
				"west_nrfsdk.yml"
			]
		},
		{
			"label": "Select McuXpresso SDK",
			"group": {
				"kind": "none",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder:firmware}"
			},
			"type": "process",
			"command": "west",
			"args": [
				"config",
				"manifest.file",
				"west_mcuxsdk.yml"
			]
		},
		{
			"label": "West update",
			"group": {
				"kind": "none",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder:firmware}"
			},
			"type": "process",
			"command": "west",
			"args": [
				"update"
			]
		},
		{
			"label": "West patch",
			"group": {
				"kind": "none",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder:firmware}"
			},
			"type": "process",
			"command": "west",
			"args": [
				"patch"
			],
			"dependsOrder": "sequence",
			"dependsOn": [
				"West update"
			]
		},
		{
			"label": "Select SDK by vscode workspace",
			"group": {
				"kind": "none",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder:firmware}"
			},
			"runOptions": {
				"runOn": "folderOpen"
			},
			"type": "process",
			"command": "west",
			"args": [
				"config",
				"manifest.file",
				"west_${config:firmware.startupSdk}.yml"
			]
		}
	]
}