{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Select nRF Connect SDK",
			"group": {
				"kind": "none",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"type": "process",
			"command": "west",
			"args": [
				"config",
				"manifest.file",
				"west.yml"
			]
		},
		{
			"label": "Select McuXpresso SDK",
			"group": {
				"kind": "none",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"type": "process",
			"command": "west",
			"args": [
				"config",
				"manifest.file",
				"west_mcuxsdk.yml"
			]
		},
		{
			"label": "West update",
			"group": {
				"kind": "none",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"type": "process",
			"command": "west",
			"args": [
				"update"
			]
		},
		{
			"label": "West patch",
			"group": {
				"kind": "none",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"type": "process",
			"command": "west",
			"args": [
				"patch"
			],
			"dependsOrder": "sequence",
			"dependsOn": [
				"West update"
			]
		},
		{
			"label": "Build UHK 80 left firmware",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"type": "process",
			"command": "west",
			"args": [
				"build",
				"--build-dir",
				"${cwd}/device/build/uhk-80-left",
				"${cwd}/device",
				"--no-sysbuild",
				"--",
				"--preset",
				"uhk-80-left"
			],
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Build UHK 80 right firmware",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"type": "process",
			"command": "west",
			"args": [
				"build",
				"--build-dir",
				"${cwd}/device/build/uhk-80-right",
				"${cwd}/device",
				"--no-sysbuild",
				"--",
				"--preset",
				"uhk-80-right"
			],
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Build UHK dongle firmware",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"type": "process",
			"command": "west",
			"args": [
				"build",
				"--build-dir",
				"${cwd}/device/build/uhk-dongle",
				"${cwd}/device",
				"--no-sysbuild",
				"--",
				"--preset",
				"uhk-dongle"
			],
			"problemMatcher": [
				"$gcc"
			]
		}
	]
}