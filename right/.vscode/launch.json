{
  "configurations": [
    {
      "type": "mcuxpresso-debug",
      "name": "Debug",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "svdPath": "${workspaceFolder}/../svd/MK22F51212.xml",
      "executable": {
        "elf": "${workspaceFolder}/build/${input:buildVariant}/uhk-60-right.elf"
      },
      "stopAtSymbol": "main",
      "probeSerialNumber": "",
      "isAttach": false,
      "skipBuildBeforeDebug": false,
      "gdbInitCommands": [
        "set remotetimeout 600",
        "set debug-file-directory",
        "set non-stop off"
      ],
      "gdbClientPath": "${env:ARM_GCC_DIR}/bin/arm-none-eabi-gdb",
      "gdbServerConfigs": {
        "linkserver": {},
        "segger": {
          "interface": "SWD",
          "device": "MK22FN512xxx12",
        },
        "pemicro": {}
      },
      "showDevDebugOutput": "none"
    }
  ],
  "inputs": [
    {
      "id": "buildVariant",
      "type": "pickString",
      "description": "Select build variant",
      "options": [
        "v2-debug",
        "v2-release",
        "v1-release",
        "v1-debug"
      ],
      "default": "v2-release"
    }
  ]
}
